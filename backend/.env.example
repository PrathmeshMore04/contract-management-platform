# ============================================
# Contract Management Platform - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# MongoDB Connection String
# For local MongoDB: mongodb://localhost:27017/contractmanagement
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/dbname
# Replace 'username', 'password', 'cluster', and 'dbname' with your actual values
MONGODB_URI=mongodb://localhost:27017/contractmanagement

# Server Port
# The port on which the Express server will run
# Default: 5000
PORT=5000

# Node Environment
# Set to 'development' for development mode (shows detailed errors)
# Set to 'production' for production mode (hides error details)
NODE_ENV=development